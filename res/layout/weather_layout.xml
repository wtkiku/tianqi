<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#87CEFA"
    android:orientation="vertical" >
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="#484E61"
         android:orientation="horizontal"
        >
        <Button android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换地"
            android:textColor="#fff"
            />
        <TextView 
            android:id="@+id/cityname"
            android:text=" "
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#fff"
            />
        <Button android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新"
            android:textColor="#fff"
            />
    </LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_margin="15dp">
	    <TextView android:id="@+id/tem"
	        android:text=" "
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:textColor="#fff"
	        android:textSize="60sp"/>
	    <ImageView android:id="@+id/pic"
	        android:scaleType="fitCenter"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"/>
	</LinearLayout>
	<TextView android:id="@+id/state"
        android:layout_margin="8dp"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25sp"/>
    <TextView android:id="@+id/wind"
        android:layout_margin="8dp"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="25sp"/>	
    <TextView android:id="@+id/time"
        android:text=" "
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>
    <LinearLayout android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView 
			android:id="@+id/fore"
			android:background="#BFEFFF"	
			android:padding="5dp"		
	        android:layout_width="fill_parent"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:textSize="25sp"/>
        <TextView android:id="@+id/forecast1"
	        android:text=""
	        android:layout_width="fill_parent"
      	    android:padding="8dp"
	    	android:background="#CAE1FF"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"/>
        <TextView android:id="@+id/forecast2"
	        android:text=""
	        android:layout_width="fill_parent"
         	android:padding="8dp"
	    	android:background="#CAE1FF"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"/>
        <TextView android:id="@+id/forecast3"
	        android:text=""
	        android:layout_width="fill_parent"
        	android:padding="8dp"
	    	android:background="#CAE1FF"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"/>            
    </LinearLayout>
</LinearLayout>
